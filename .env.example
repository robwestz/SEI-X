# SIE-X Environment Configuration (Development)
# Copy this file to .env and customize for your environment

# =============================================================================
# APPLICATION
# =============================================================================
SIE_X_ENV=development
SIE_X_DEBUG=true
SIE_X_HOST=0.0.0.0
SIE_X_PORT=8000
SIE_X_WORKERS=1
SIE_X_LOG_LEVEL=INFO

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
SIE_X_DB_URL=postgresql://siex_app:your_password_here@localhost:5432/siex_dev
SIE_X_DB_POOL_SIZE=10
SIE_X_DB_MAX_OVERFLOW=20
SIE_X_DB_SSL_MODE=disable

# =============================================================================
# REDIS CACHE (Required for auth & rate limiting)
# =============================================================================
SIE_X_REDIS_URL=redis://localhost:6379/0
SIE_X_REDIS_PASSWORD=
SIE_X_REDIS_SSL=false

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Secret (Generate with: openssl rand -base64 48)
SIE_X_JWT_SECRET=change-me-in-production-use-openssl-rand-base64-48
SIE_X_JWT_ALGORITHM=HS256
SIE_X_TOKEN_EXPIRY=3600

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
SIE_X_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# RATE LIMITING
# =============================================================================
SIE_X_RATE_LIMIT_HOUR=1000
SIE_X_RATE_LIMIT_MINUTE=100
SIE_X_RATE_LIMIT_SKIP_IF_UNAVAILABLE=true

# =============================================================================
# SECURITY
# =============================================================================
SIE_X_HTTPS_ONLY=false
SIE_X_ENFORCE_QUOTAS=false
SIE_X_TRUSTED_HOSTS=

# Content Security Policy
SIE_X_CSP=default-src 'self'; script-src 'self' 'unsafe-inline' cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net; img-src 'self' data:;

# =============================================================================
# FILE UPLOADS
# =============================================================================
SIE_X_MAX_FILE_SIZE=5242880
SIE_X_MAX_REQUEST_SIZE=10485760

# =============================================================================
# LANGUAGE MODELS
# =============================================================================
SIE_X_SPACY_MODEL_EN=en_core_web_sm
SIE_X_SPACY_MODEL_SV=sv_core_news_sm
